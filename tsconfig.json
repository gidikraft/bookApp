{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/i18n": [
        "./src/i18n/*"
      ],
      "@/assets": [
        "./src/assets/*"
      ],
      "@/components": [
        "./src/components/*"
      ],
      "@/hooks": [
        "./src/hooks/*"
      ],
      "@/navigation": [
        "./src/navigation/*"
      ],
      "@/network": [
        "./src/network/*"
      ],
      "@/screens": [
        "./src/screens/*"
      ],
      "@/services/": [
        "./src/services/*"
      ],
      "@/store": [
        "./src/store/*"
      ],
      "@/types": [
        "./src/types/*"
      ],
      "@/theme": [
        "./src/theme/*"
      ],
      "@/utils": [
        "./src/utils/*"
      ]
    },
    "types": ["jest"],
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
